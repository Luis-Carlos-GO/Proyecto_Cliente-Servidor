<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Panel de Administrador</title>
    <link rel="stylesheet" href="../rutinas_user.css" />
  </head>

  <body>
    <nav class="nav">
		<div class="logo">
		  <a href="/admin">Mucle Boost</a>
		</div>
		<ul>
		  <li><a href="/menu">Inicio</a></li>
		  <li><a href="/ejercicios">Ejercicios</a></li>
		  <li><a href="/rutinas_user">Rutinas</a></li>
		  <li><a href="/profile">Perfil</a></li>
		  <li><a href="/">Cerrar Sesión</a></li>
		  <li><a href="/WorkPage">Contacto</a></li>
		</ul>
	  </nav>

    <div class="container">
        <div class="row mt-7">
          <% if(data) { %>
            <% for (var i=0; i< data.length; i++) { %>
              <div class="col-md-4">
                <div class="card-custom">
                  <div class="card-body">
                    <h5 class="card-title"><%= data[i].nombre %></h5>
                    <p class="card-text"><%= data[i].descripcion %></p>
                    <a href="/ejercicios" class="btn btn-primary">Ver</a>
                  </div>
                </div>
              </div>
            <% } %>
          <%  } %>
        </div>
      </div>
      

    <footer class="footer">
      <div class="footer-container">
        <div class="footer-info">
          <h3>Muscle Boost</h3>
          <p>Dirección de la empresa</p>
          <p>Teléfono: +506 8880 9900</p>
          <p>Email: muscleboost@mysite.com</p>
        </div>
        <div class="footer-links">
          <h3>Enlaces</h3>
          <ul>
            <li><a href="/menu">Inicio</a></li>
            <li><a href="/ejercicios">Ejercicios</a></li>
            <li><a href="/rutinas">Rutinas</a></li>
            <li><a href="#">Contacto</a></li>
          </ul>
        </div>
        <div class="footer-social">
          <h3>Síguenos</h3>
          <ul>
            <li>
              <a href="#"><i class="fab fa-facebook"></i></a>
            </li>
            <li>
              <a href="#"><i class="fab fa-twitter"></i></a>
            </li>
            <li>
              <a href="#"><i class="fab fa-instagram"></i></a>
            </li>
          </ul>
        </div>
      </div>
    </footer>
    <script>
      function getRandomSize() {
        return `${getRandomNr()}x${getRandomNr()}`;
      }
      function getRandomNr() {
        return Math.floor(Math.random() * 10) + 300;
      }
      const images = document.querySelectorAll(".card-custom img");
      images.forEach((img) => {
        const randomColor = Math.floor(Math.random() * 16777215).toString(16);
        img.style.border = `2px solid #${randomColor}`;
        img.style.boxShadow = `0 0 5px #${randomColor}, 0 0 10px #${randomColor}, 0 0 15px #${randomColor}, 0 0 20px #${randomColor}, 0 0 25px #${randomColor}`;
        img.style.animation = `neon-blink-${randomColor} 1s infinite`;
      });
    </script>
  </body>
</html>
