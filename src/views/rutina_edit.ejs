<%- include ('partials/_header') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/rutinas/update/<%= data.id %>" method="post">
                        <div class="form-group">
                            <input type="text" name="nombre" value="<%= data.nombre%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="descripcion" value="<%= data.descripcion%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="nivel" value="<%= data.nivel%>" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            EDITAR RUTINA
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('partials/_footer') %>