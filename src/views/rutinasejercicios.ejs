<%- include ('partials/_header') %>

<div class="container">
    <div class="row mt-7">
        <div class="col-md-8">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>nยบ</th>
                    <th>rutina id</th>
                    <th>ejercicio id</th>
                    <th>series</th>
                    <th>repeticiones</th>
                    <th>segundos de descanso</th>
                    <th>accion</th>
                </tr>
            </thead>
            <tbody>
                <% if(data) { %>
                    <% for (var i=0; i< data.length; i++) { %>
                        <tr>
                            <td><%=(i + 1)%></td>
                            <td><%= data[i].rutina_id%></td>
                            <td><%= data[i].ejercicio_id%></td>
                            <td><%= data[i].series%></td>
                            <td><%= data[i].repeticiones%></td>
                            <td><%= data[i].descanso_segundos%></td>
                            <td>
                                <a href="/rutinas/delete/<%= data[i].id %>" class="btn btn-danger">delete</a>
                                <a href="/rutinas/update/<%= data[i].id %>" class="btn btn-info">update</a>
                            </td>
                        </tr>
                    <% } %>
                <%  } %>
            </tbody>
        </table>
        </div> 
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/rutinas/add" method="post">
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="Nombre Rutina" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="descripcion" placeholder="Descripcion" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="nivel" placeholder="Nivel" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            GUARDAR RUTINA
                        </button>
                    </form>
                </div>
            </div>
        </div>      
    </div>
</div>

<%- include ('partials/_footer') %>